alt[2] = {ttl:"丁寧なヒアリングとカウンセリング", txt:"当サロンは、丁寧なヒアリング・カウンセリングを実施し、お客様の要望や悩みに寄り添い、最適なアートメイクを提案安全・効果的な施術と持続的な美しさをサポートします。"};
alt[3] = {ttl:"オシャレでアットホームなサロン", txt:"当サロンは、アートメイクをクリニックではなく、オシャレでアットホームなサロンで提供しています。医療行為ではありますが、気軽に来店いただける雰囲気を大切にし、お客様にリラックスしていただける空間を提供しています。"};
alt[4] = {ttl:"２２時まで営業", txt:"営業時間が10時から22時までの12時間営業で、他のクリニックと比べて営業時間が長いのが強みです。仕事帰りの主婦層や働く女性にもアクセスしやすく、忙しい方々のニーズにも柔軟に対応しています。"};
alt[5] = {ttl:"予約が取りやすい", txt:"他のクリニックと比べて予約が取りやすいのが、当サロンの魅力です。スケジュールの調整が容易であり、お客様の都合に合わせた施術が受けられます。"};
alt[6] = {ttl:"診療のカウンセリングがオンラインで可能", txt:"診療のカウンセリングはオンラインで自宅から受けることができます。これにより、来店する手間や時間を節約し、リラックスした状態で相談が可能となっています。"};
alt[7] = {ttl:"真心のこもったサービスと丁寧なサポート", txt:"フリーランスの看護師が、真心込めたサービスと丁寧なサポートを提供します。施術後の肌トラブルにも、LINEで24時間体制で質問受付が可能であり、安心して施術を受けられます。"};
alt[8] = {ttl:"アートメイクスクール", txt:"全国でも有数のアートメイクを学べるサロンです。研修生によるモニター募集も行われており、安価な価格でアートメイクに挑戦できるプランもあります。"};
-%>
                    <!-- 0<%- bnum %> -->
                    <li class="boxwrap" data-eff="fadein-up">
                        <div class="box<%- frev %> --no0<%-bnum%>">
                            <picture class="img">
                                <source media="(max-width: 767px)" type="image/jpg" srcset="<%- ids %>/box_<%- bnum %>_img@2x.jpg ">
                                <source media="(min-width: 768px)" type="image/jpg" srcset="<%- id %>/box_<%- bnum %>_img.jpg, <%- id %>/box_<%- bnum %>_img@2x.jpg 2x">
                                <img src="<%- id %>/box_<%- bnum %>_img.jpg" alt="特徴<%- bnum %>イメージ" width="300" height="320">
                            </picture>
                            <div class="txtwrap">
                                <div class="heading">
                                    <picture class="num">
                                        <source media="(max-width: 767px)" type="image/png" srcset="<%- ids %>/box_<%- bnum %>_num@2x.png">
