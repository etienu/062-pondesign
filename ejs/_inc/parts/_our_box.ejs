                                        <img src="<%- id %>/box_<%- bnum %>_num.png" alt="0<%- bnum %>" width="50" height="42">
                                    </picture>
                                    <h3>
                                        <picture class="ttl">
                                            <source media="(max-width: 767px)" type="image/png" srcset="<%- ids %>/box_<%- bnum %>_ttl@2x.png">
